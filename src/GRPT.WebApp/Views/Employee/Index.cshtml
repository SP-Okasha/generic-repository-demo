


<h3 class="text-theme">Employees  <button class="btn btn-sm btn-outline-theme" onclick="loadEmployeeForm()"><i class="fas fa-user-plus"></i> Add new</button></h3>
<hr class="border border-theme"/>


<table id="table-employee" class="table table-sm table-responsive-md w-100 text-nowrap">
    <thead>
        <tr>
            <th>Name</th>
            <th>Code</th>
            <th>Designation</th>
            <th>Salary</th>
            <th>Manager</th>
            <th>Department</th>
            <th></th>
        </tr>
    </thead>   
</table>



<div class="modal fade" id="employee-form-modal" tabindex="-1">
    <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered">
        <div class="modal-content rounded-9">
            <div class="modal-header bg-theme">
                <h5 class="text-white"><strong id="employee-form-modal-title"></strong></h5>
            </div>
            <div class="modal-body px-3">
                <form id="employee-add-update-form">
                    <input type="hidden" name="Id" id="txt-emp-id" />

                    <div class="row">
                        <label for="txt-emp-name" class="col-sm-4 col-form-label">Name <span class="text-danger">*</span></label>
                        <div class="col-sm-8">
                            <input type="text" name="EmpName" id="txt-emp-name" class="form-control form-control-sm " placeholder="Enter Employee name" />
                            <div class="user-input-feedback"></div>
                        </div>
                    </div>

                    <div class="row">
                        <label for="txt-emp-code" class="col-sm-4 col-form-label">Employee Code <span class="text-danger">*</span></label>
                        <div class="col-sm-8">
                            <input type="text" name="EmpCode" id="txt-emp-code" class="form-control form-control-sm " placeholder="Enter Employee Code" />
                            <div class="user-input-feedback"></div>
                        </div>
                    </div>

                    <div class="row">
                        <label for="txt-designation" class="col-sm-4 col-form-label">Designation<span class="text-danger">*</span></label>
                        <div class="col-sm-8">
                            <input type="text" name="Designation" id="txt-designation" class="form-control form-control-sm " placeholder="Enter Designation" />
                            <div class="user-input-feedback"></div>
                        </div>
                    </div>


                    <div class="row">
                        <label for="txt-salary" class="col-sm-4 col-form-label">Salary<span class="text-danger">*</span></label>
                        <div class="col-sm-8">
                            <input type="number" name="Salary" id="txt-salary" class="form-control form-control-sm " placeholder="Enter Salary" />
                            <div class="user-input-feedback"></div>
                        </div>
                    </div>

                    <div class="row">
                        <label for="dataList-managers" class="col-sm-4 col-form-label">Manager<span class="text-danger">*</span></label>
                        <div class="col-sm-8">
                            <select id="dataList-managers" class="form-control form-control-sm" name="ManagerId"></select>
                            <div class="user-input-feedback"></div>
                        </div>
                    </div>

                    <div class="row">
                        <label for="dataList-departments" class="col-sm-4 col-form-label">Department<span class="text-danger">*</span></label>
                        <div class="col-sm-8">
                            <select id="dataList-departments" class="form-control form-control-sm" name="DeptId"></select>
                            <div class="user-input-feedback"></div>
                        </div>
                    </div>

                    <hr />
                    <div class="row">
                        <div class="col text-end">
                            <button type="submit" class="btn btn-sm btn-theme "><i class="far fa-save"></i>&nbsp; Save</button>
                            <button type="button" class="btn btn-sm btn-outline-red" data-bs-dismiss="modal"> <i class="fas fa-times"></i>&nbsp; Cancel</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{ 
    <script type="text/javascript" src="~/js/app-js/employee-js.js" asp-append-version="true"></script>
}